{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES6",
		"experimentalDecorators": true,
		"outDir": "out",
		"lib": [
			"es6"
		],
		"esModuleInterop": true,
		// "declaration": true,
		// "declarationDir": "typing",
		"sourceMap": true,
		"rootDir": ".",
		"allowJs": true,
		"moduleResolution": "node",
		"strict": true,
		"paths": {
			"~/*": [
				"./*"
			],
			"@/*": [
				"./src/*"
			]
		},
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
