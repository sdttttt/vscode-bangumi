{
	"name": "bangumiopen",
	"publisher": "SDTTTTT",
	"author": "SDTTTTT",
	"repository": "https://github.com/sdttttt/vscode-Bangumi",
	"displayName": "Bangumi Open",
	"description": "Support Browse Bangumi for vscode.",
	"preview": false,
	"version": "2.2.3",
	"license": "SEE LICENSE IN LICENSE",
	"icon": "Icon.png",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"bilibili",
		"bangumi",
		"anime"
	],
	"activationEvents": [
		"*"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "openBangumi",
				"title": "Open Bangumi"
			},
			{
				"command": "nextPage",
				"title": "Bangumi Open: Next Page"
			},
			{
				"command": "backPage",
				"title": "Bangumi Open: Back Page"
			},
			{
				"command": "jumpPage",
				"title": "Bangumi Open: Jump to number of Page"
			},
			{
				"command": "weekBangumi",
				"title": "Bangumi Open: Week Bangumi"
			},
			{
				"command": "index",
				"title": "Bangumi Open: Index"
			}
		],
		"keybindings": [
			{
				"command": "nextPage",
				"key": "ctrl+alt+l",
				"mac": "cmd+alt+l"
			},
			{
				"command": "backPage",
				"key": "ctrl+alt+k",
				"mac": "cmd+alt+k"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Bangumi Open",
			"properties": {
				"bangumiOpen.DisplayHistory": {
					"type": "boolean",
					"default": false,
					"description": "Whether to show the Bangumi of the past 6 days?"
				},
				"bangumiOpen.EnableReminder": {
					"type": "boolean",
					"default": true,
					"description": "When enabled, BangumiOpen will remind you when the Bangumi is updated."
				},
				"bangumiOpen.ReminderAheadTime": {
					"type": "integer",
					"default": 0,
					"description": "[Unit: seconds] Sometimes, you may need Reminder to remind you in advance."
				},
				"bangumiOpen.DisplayStatusBar": {
					"type": "boolean",
					"default": true,
					"description": "When enabled, StatusBar will shows the next bangumi to be updated."
				},
				"bangumiOpen.DisplayIndexTags": {
					"type": "boolean",
					"default": true,
					"description": "Whether to display the tags that have been selected ?"
				}
			}
		}
	},
	"private": true,
	"scripts": {
		"compile": "gulp compile",
		"build": "gulp",
		"format": "prettier --write src/** && yarn run eslint:fix",
		"watch": "webpack --mode none --watch",
		"pretest": "yarn run compile",
		"test": "node ./out/test/runTest.js",
		"clean": "gulp clean",
		"vscode:prepublish": "yarn run webpack:prepublish",
		"webpack:prepublish": "webpack --mode production",
		"webpack:compile": "webpack --mode none",
		"lint": "tslint ./src/**/*.ts -t verbose",
		"package": "vsce package",
		"eslint": "eslint src --ext .ts",
		"eslint:fix": "eslint --fix src --ext .ts",
		"commit": "git add . && npx git-cz",
		"gulp:imgmin": "gulp optimizeimg",
		"gulp:cssmin": "gulp optimizecss",
		"gulp:watch": "gulp watchCompile"
	},
	"devDependencies": {
		"@babel/core": "^7.12.10",
		"@babel/plugin-proposal-class-properties": "^7.12.1",
		"@babel/plugin-proposal-object-rest-spread": "^7.12.1",
		"@babel/preset-env": "^7.12.10",
		"@babel/preset-typescript": "^7.12.7",
		"@types/axios": "^0.14.0",
		"@types/chai": "^4.2.8",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^14.14.13",
		"@types/vscode": "^1.41.0",
		"@typescript-eslint/eslint-plugin": "^3.0.0",
		"@typescript-eslint/parser": "^3.0.2",
		"axios": "^0.21.0",
		"babel-loader": "^8.2.2",
		"chai": "^4.2.0",
		"eslint": "^7.15.0",
		"eslint-plugin-typescript": "^0.14.0",
		"fork-ts-checker-webpack-plugin": "^6.0.7",
		"glob": "^7.1.5",
		"gulp": "^4.0.2",
		"gulp-clean": "^0.4.0",
		"gulp-clean-css": "^4.3.0",
		"gulp-cli": "^2.3.0",
		"gulp-imagemin": "^7.1.0",
		"gulp-typescript": "^6.0.0-alpha.1",
		"mocha": "^7.1.0",
		"prettier": "^2.2.1",
		"ts-loader": "^8.0.12",
		"tslint": "^6.1.0",
		"typescript": "^3.6.4",
		"typescript-eslint-parser": "^22.0.0",
		"vscode-test": "^1.2.2",
		"webpack": "^5.10.1",
		"webpack-cli": "^4.2.0"
	}
}
