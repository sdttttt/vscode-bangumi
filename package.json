{
  "name": "bangumiopen",
  "publisher": "SDTTTTT",
  "author": "SDTTTTT",
  "repository": "https://github.com/sdttttt/vscode-Bangumi",
  "displayName": "Bangumi Open",
  "description": "Support Browse Bangumi for vscode",
  "preview": true,
  "version": "2.0.1",
  "license": "SEE LICENSE IN LICENSE",
  "icon": "Icon.png",
  "engines": {
    "vscode": "^1.41.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "bilibili",
    "bangumi",
    "anime"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "openBangumi",
        "title": "Open Bangumi"
      },
      {
        "command": "nextPage",
        "title": "Bangumi Open: Next Page"
      },
      {
        "command": "backPage",
        "title": "Bangumi Open: Back Page"
      },
      {
        "command": "jumpPage",
        "title": "Bangumi Open: Jump to number of Page"
      },
      {
        "command": "weekBangumi",
        "title": "Bangumi Open: Week Bangumi"
      },
      {
        "command": "index",
        "title": "Bangumi Open: Index"
      }
    ],
    "keybindings": [
      {
        "command": "nextPage",
        "key": "ctrl+alt+l",
        "mac": "cmd+alt+l"
      },
      {
        "command": "backPage",
        "key": "ctrl+alt+k",
        "mac": "cmd+alt+k"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Bangumi Open",
      "properties": {
        "bangumiOpen.DisplayHistory": {
          "type": "boolean",
          "default": false,
          "description": "Whether to show the Bangumi of the past 6 days?"
        },
        "bangumiOpen.EnableReminder": {
          "type": "boolean",
          "default": true,
          "description": "When enabled, BangumiOpen will remind you when the Bangumi is updated."
        },
        "bangumiOpen.ReminderAheadTime": {
          "type": "integer",
          "default": 0,
          "description": "[Unit: seconds] Sometimes, you may need Reminder to remind you in advance."
        },
        "bangumiOpen.DisplayIndexTags": {
          "type": "boolean",
          "default": true,
          "description": "Whether to display the tags that have been selected ?"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "webpack --mode none --watch",
    "pretest": "yarn run compile",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "webpack --mode production",
    "webpack:compile": "webpack --mode none",
    "lint": "tslint ./src/**/*.ts -t verbose",
    "package": "vsce package",
    "eslint": "eslint src --ext .ts",
    "eslint-fix": "yarn run eslint --fix"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/chai": "^4.2.8",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.41.0",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "axios": "^0.19.2",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-typescript": "^0.14.0",
    "glob": "^7.1.5",
    "mocha": "^6.2.2",
    "ts-loader": "^6.2.1",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4",
    "typescript-eslint-parser": "^22.0.0",
    "vscode-test": "^1.2.2",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  }
}
